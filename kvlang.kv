<BotaoCancelarSalvar@Button>:
    background_down: ''
    background_normal: ''
    background_color: cor_botao 
    font_size: 25
    on_press: self.background_color = cor_botao_laranja
    on_release: self.background_color = cor_botao
  
<BotaoEdicao@Button>:
    nome_imagem: ''
    background_down: ''
    background_normal: ''
    background_color: cor_botao
    on_press: self.background_color = cor_botao_laranja
    on_release: self.background_color = cor_botao
    Image:
        source: 'Icones/' + self.parent.nome_imagem
        x: self.parent.center_x - 32
        y: self.parent.center_y - 32
        size_hint: None, None
        width: 64
        height: 64

<TelaInicial>:
    BoxLayout:
        padding: 15
        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: cor_borda
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 5, 5, 5, 5
                Color:
                    rgba: cor_fundo
                RoundedRectangle:
                    size: self.size[0] - 12, self.size[1] - 12
                    pos: self.pos[0] + 6, self.pos[1] +6
            BoxLayout:
                Image:
                    source: 'Icones\ck8.png'
                    size_hint: 1, .4    
            Label:
                id: mensagem
                color: cor_texto
                text: '[b]Arraste a imagem para c√°'
                font_size: 22
                markup: True
                halign: 'center'
                valign: 'top'
                text_size: self.size


<TelaEdicao>:
    BoxLayout:
        padding: 15
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint: 1, None
                height: 100
                spacing: 5
                BotaoEdicao:
                    nome_imagem: 'bt1.png'
                    on_release: root.bt_girar_anti_horario()

                BotaoEdicao:
                    nome_imagem: 'bt2.png'
                    on_release: root.bt_girar_horario()
                BotaoEdicao:
                    nome_imagem: 'bt3.png'
                    on_release: root.bt_pb()
            Widget:
                size_hint: 1, None
                height: 10
            BoxLayout:
                id: area_imagem
            Widget:
                size_hint: 1, None
                height: 10
            BoxLayout:
                size_hint: 1, None
                height: 100
                spacing: 5
                BotaoCancelarSalvar:
                    text: 'Cancelar'
                    on_release: root.bt_cancelar()
                BotaoCancelarSalvar:
                    text: 'Salvar'
                    on_release: root.bt_cancelar()






